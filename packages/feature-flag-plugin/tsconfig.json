{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": false,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "outDir": "dist",
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "vite-plugin-feature-flag/*": ["src/*"],
      "vite-plugin-feature-flag": ["src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
