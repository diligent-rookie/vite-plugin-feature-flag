{
  "name": "vite-plugin-feature-flag",
  "type": "module",
  "author": "diligent-rookie",
  "engines": {
    "node": ">=20.8.1"
  },
  "scripts": {
    "demo": "pnpm --filter react-demo dev",
    "test": "pnpm -r run test",
    "prepare": "husky",
    "build": "tsx scripts/build.ts",
    "clear": "tsx scripts/clear.ts",
    "lint": "eslint . --ext .js,.ts,.mjs,.cjs,.mts,.cts",
    "lint:fix": "eslint . --ext .js,.ts,.mjs,.cjs,.mts,.cts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.31.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "commitlint": "^19.8.1",
    "eslint": "^9.30.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.7",
    "tsx": "^4.20.3",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.35.1",
    "vitest": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,ts,mjs,cjs,mts,cts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml,html,css}": [
      "prettier --write"
    ]
  }
}
