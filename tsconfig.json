{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "types": ["node"]
  },
  "include": [
    "packages/**/src/**/*",
    "scripts/**/*",
    "*.js",
    "*.ts",
    "*.mjs",
    "*.cjs",
    "*.mts",
    "*.cts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/**/dist",
    "packages/**/node_modules"
  ]
}
